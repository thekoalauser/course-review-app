<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.CourseReviewController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="backButtonCourses" mnemonicParsing="false" text="Back to Courses" />
               </children>
            </HBox>
            <Separator />
            <Label fx:id="courseInfoLabel" text="CS 3140: Software Development Essentials" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label fx:id="averageRatingLabel" text="Average Rating: 4.21">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.6" orientation="VERTICAL" BorderPane.alignment="CENTER">
         <items>
            <VBox spacing="10.0">
               <children>
                  <Label text="Reviews">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                     <content>
                        <VBox fx:id="reviewsContainer" spacing="10.0" />
                     </content>
                  </ScrollPane>
               </children>
               <padding>
                  <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </VBox>
            <VBox spacing="10.0">
               <children>
                  <Label text="Your Review">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER_LEFT" spacing="10.0">
                     <children>
                        <Label text="Rating (1-5):" />
                        <Spinner fx:id="ratingSpinner" editable="true" prefWidth="100.0" />
                     </children>
                  </HBox>
                  <Label text="Comment (optional):" />
                  <TextArea fx:id="commentTextArea" prefHeight="100.0" promptText="Enter your review comments here" wrapText="true" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER_RIGHT" spacing="10.0">
                     <children>
                        <Button fx:id="deleteReviewButton" mnemonicParsing="false" text="Delete Review" />
                        <Button fx:id="editReviewButton" mnemonicParsing="false" text="Update Review" />
                        <Button fx:id="submitReviewButton" mnemonicParsing="false" text="Submit Review" />
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
</BorderPane>
