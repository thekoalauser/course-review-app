<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.virginia.sde.reviews.CourseSearchController"
            prefHeight="400.0" prefWidth="600.0">
    <VBox spacing="15.0" alignment="TOP_CENTER" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <children>
                    <Button fx:id="backButton" text="Back to Home" />
                </children>
            </HBox>

            <Label text="Search Courses">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>

            <HBox spacing="10.0" alignment="CENTER">
                <children>
                    <TextField fx:id="searchField" promptText="Enter course name or number" prefWidth="400.0" />
                    <Button fx:id="searchButton" text="Search" />
                </children>
            </HBox>

            <ListView fx:id="resultsListView" prefHeight="400.0" VBox.vgrow="ALWAYS" />

            <Label fx:id="noResultsLabel" text="No matching courses found." visible="false" />
        </children>

        <padding>
            <Insets top="10.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>
    </VBox>

</AnchorPane>
