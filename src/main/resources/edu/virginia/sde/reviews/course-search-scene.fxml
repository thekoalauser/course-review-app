<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="edu.virginia.sde.reviews.CourseSearchController"
            prefHeight="600.0" prefWidth="800.0">

    <VBox spacing="15.0" alignment="TOP_CENTER"
          AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <children>

            <!-- Back Button -->
            <HBox spacing="10.0" alignment="CENTER_LEFT">
                <children>
                    <Button fx:id="backButton" text="Back to Home" />
                </children>
            </HBox>

            <!-- Title -->
            <Label text="Search Courses">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>

            <!-- Search Fields -->
            <HBox spacing="10.0" alignment="CENTER">
                <children>
                    <TextField fx:id="subjectField" promptText="Subject (e.g. CS)" prefWidth="100.0" />
                    <TextField fx:id="numberField" promptText="Number (e.g. 2130)" prefWidth="100.0" />
                    <TextField fx:id="titleField" promptText="Title contains..." prefWidth="250.0" />
                    <Button fx:id="searchButton" text="Search" />
                    <Button fx:id="addCourseButton" text="Add Course" />
                </children>
            </HBox>

            <!-- Course Table -->
            <TableView fx:id="resultsTableView" prefHeight="400.0" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="subjectColumn" text="Subject" prefWidth="100.0" />
                    <TableColumn fx:id="numberColumn" text="Number" prefWidth="100.0" />
                    <TableColumn fx:id="titleColumn" text="Title" prefWidth="350.0" />
                    <TableColumn fx:id="averageColumn" text="Avg. Rating" prefWidth="120.0" />
                </columns>
            </TableView>

            <!-- No Results -->
            <Label fx:id="noResultsLabel" text="No matching courses found." visible="false" />

        </children>

        <padding>
            <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
        </padding>
    </VBox>

</AnchorPane>
