<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.virginia.sde.reviews.HomeController">
   <top>
      <VBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="UVA Course Reviews" textAlignment="CENTER">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Label fx:id="welcomeLabel" text="Welcome, User">
               <font>
                  <Font size="16.0" />
               </font>
            </Label>
            <Separator />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="30.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="What would you like to do?">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" spacing="60.0">
               <children>
                  <!-- Course Search -->
                  <VBox alignment="CENTER" spacing="15.0" styleClass="nav-box">
                     <children>
                        <Label text="Search Courses" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="Find and browse available courses" textAlignment="CENTER" wrapText="true" />
                        <Button fx:id="courseSearchButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="Course Search" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>

                  <!-- My Reviews -->
                  <VBox alignment="CENTER" spacing="15.0" styleClass="nav-box">
                     <children>
                        <Label text="My Reviews" textAlignment="CENTER">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Label>
                        <Label text="Manage your own course reviews" textAlignment="CENTER" wrapText="true" />
                        <Button fx:id="myReviewsButton" mnemonicParsing="false" prefHeight="40.0" prefWidth="150.0" text="My Reviews" />
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="logoutButton" mnemonicParsing="false" text="Logout" />
            <Button fx:id="exitButton" mnemonicParsing="false" text="Exit" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
</BorderPane>
